<%- model_class = Proyect -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.proyecto', 'Proyecto'], :model=> model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:begindate) %></th>
      <th><%= model_class.human_attribute_name(:enddate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= link_to proyect.id, proyect_path(proyect) %></td>
        <td><%= proyect.name %></td>
        <td><%= proyect.description %></td>
        <td><%= proyect.begindate %></td>
        <td><%= proyect.enddate %></td>
        <td><%=l proyect.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_proyect_path(proyect), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
                      proyect_path(proyect),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirmar", :default => 'Estas seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.nuevo")),
            new_proyect_path,
            :class => 'btn btn-primary' %>
